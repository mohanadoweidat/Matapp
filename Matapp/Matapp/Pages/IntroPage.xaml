     <!-- Two Icons with buttons-->
     <ContentPage BackgroundColor="DarkRed">
        <ScrollView>
            <StackLayout>

                <Frame BackgroundColor="Transparent" BorderColor="White" CornerRadius="20" Margin="10,10,10,10">
