<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:an="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             x:Class="NTI_QRsystem.Components.ErrorMessage"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="FillAndExpand">
    <an:AnimationView Animation="error.json" AutoPlay="True" WidthRequest="50"
     HeightRequest="50" Speed="1.6" x:Name="animation"/>
    <Label x:Name="lbl" HorizontalOptions="CenterAndExpand" FontSize="16"
           HorizontalTextAlignment="Center"/>
    <Button Style="{StaticResource CustomButton}" BackgroundColor="Red"
            VerticalOptions="EndAndExpand" Text="Avbryt" Clicked="Button_Clicked"/>
</StackLayout>